{{#partial "content"}}

<div class="container">

    <div class="card">
        <h5>ID</h5>
        <h5>Name</h5>
        <h5>Health</h5>
        <h5>Threat Type</h5>
        <h5>Age</h5>
        <div class="body">
            <div class="top">
            {{#each animals }}
                <div class="row">{{id}}</div>
                <div class="row">{{name}}</div>
                <div class="row">{{THREAT_TYPE}}</div>
            {{/each}}
            {{#each endangereds in endangereds}}
                <div class="row">{{endangered.getId}}</div>
                <div class="row">{{endangered.getName}}</div>
                <div class="row">{{endangered.getHealth}}</div>
                <div class="row">{{endangered.getThreatType}}</div>
                <div class="row">{{endangered.getAge}}</div>
            {{/each}}
            </div>
        </div>

            <div class="body">
                <div class="sighting-form container">
                    <div class="card">
                        <h2>Add Animal</h2>
                        <form action="/animals/new" method="post">
                        <div class="form-group row">

                            <div class="col-sm-10">
                                <input type="text" id="inputName" name="inputName" placeholder="Name" class="form-control">
                            </div>
                        </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="endangeredInput" name="endangeredInput">
                                <label class="form-check-label" for="endangeredInput">Endangered?</label>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <label for="healthInput">Health</label>
                                    <select class="form-control" name="healthInput" id="healthInput">
                                        <option>healthy</option>
                                        <option>ill</option>
                                        <option>okay</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <label for="ageInput">Age</label>
                                    <select class="form-control" id="ageInput" name="ageInput">
                                        <option>newborn</option>
                                        <option>young</option>
                                        <option>adult</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Add Animal</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}